<html>
    <head>
        <title>Results: <%= query %></title>
        <link rel="stylesheet" href="/public/base.css">
        <link rel="stylesheet" href="/public/search.css">
    </head>
    <body>
        <header>
            <div>
                <ul>
                    <li>
                        <a href="/">Home</a>
                    </li>
                    <li>
                        <a href="/search">Search</a>
                    </li>
                    <li>
                        <a href="/map">Map</a>
                    </li>
                </ul>
            </div>
        </header>
        <div class="content">
            <h1>Results for <%= query %></h1>
            <form id="search-form">
                <input type="text" name="q" value="<%= query %>">
                <input type="submit">
            </form>
            <div class="results">
                <ul>
                    <% results.forEach(result => { %>
                        <% if (result.type === "stop") { %>
                            <li onclick="window.location='/stop/<%= result.atco_id %>'">
                                <div class="type-icon">
                                    <img src="/public/busstopicon2.png">
                                </div>
                                <div class="text">
                                    <% if (result.indicator) { %>
                                        <h3><%= result.indicator %> <%= result.commonName %></h3>
                                    <% } else { %>
                                        <h3><%= result.commonName %></h3>
                                    <% } %>
                                    <p><%= result.town %></p>
                                </div>
                            </li>
                        <% } else { %>
                                    
                        <% } %>
                    <% }); %>
                </ul>
            </div>
        </div>
        <script defer src="/public/search.ejs"></script>
    </body>
</html>